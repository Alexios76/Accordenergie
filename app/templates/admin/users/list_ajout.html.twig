{% extends 'base_auth.html.twig' %}

{% block body %}

<style>
    body {
        background: -webkit-linear-gradient(to right, #5b9758, #8bbd7c, #3e7c4d, #266e3b);
        font-family: Arial, sans-serif;
        display: flex;
        flex-direction: column; 
        align-items: center; 
        height: 100vh; 
    }

    nav {
        width: 100%; 
        background-color: black;
        padding: 10px 20px;
        box-sizing: border-box;
    }

    .company-name {
        font-size: 24px;
        color: white;
    }

    .nav-links {
        list-style-type: none;
        display: flex;
        gap: 20px;
    }

    .nav-links li a {
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        border-bottom: 2px solid transparent;
        transition: border-bottom-color 0.3s;
    }

    .nav-links li a:hover {
        border-bottom-color: white;
    }

    form {
        width: 80%; 
        background-color: #fff; 
        padding: 20px;
        margin-top: 20px; 
        border-radius: 10px;
        box-shadow: 0px 3px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        color: black; 
        text-align: center;
        margin-bottom: 30px; 
        margin-top: 30px;
        margin-left: -100px;
    }

    label {
        color: #333; 
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    select {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc; 
        border-radius: 5px;
        box-sizing: border-box;
    }

    .submit {
        width: 100%;
        padding: 10px;
        background-color:  #3e7c4d; 
        color: #fff; 
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .return-button {
        margin-top: 20px;
        text-align: center;
    }

    .return-button a {
        color: grey;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 13px;
    }

    .required::after {
        content: "*";
        color: red;
    }
    

</style>

<div class="container">
    <h2 class="mb-4">Ajouter un nouvel utilisateur</h2>
{% if flash_message is defined %}
    <div class="alert alert-{{ flash_message.type }}" style="color: red; font-weight: bold;">
        {{ flash_message.message }}
    </div>
{% endif %}
    
    <form method="post" action="add_user.php">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="name" class="required">Nom:</label>
                    <input type="text" class="form-control" id="name" name="name" required value="{{ form_data.name ?? '' }}">
                </div>
                <div class="form-group">
                    <label for="email" class="required">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required value="{{ form_data.email ?? '' }}">
                </div>
                <div class="form-group">
                    <label for="phone_number" class="required">Numéro de téléphone:</label>
                    <input type="text" class="form-control" id="phone_number" name="phone_number" required value="{{ form_data.phone_number ?? '' }}">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="surname" class="required">Prénom:</label>
                    <input type="text" class="form-control" id="surname" name="surname" required value="{{ form_data.surname ?? '' }}">
                </div>
                <div class="form-group">
                    <label for="password" class="required">Mot de passe:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="user_type" class="required">Type d'utilisateur:</label>
                    <select class="form-control" id="user_type" name="user_type" required>
                        <option value="standardiste">Standardiste</option>
                        <option value="client">Client</option>
                        <option value="intervenant">Intervenant</option>
                        <option value="admin">Admin</option>
                    </select>
                </div>
            </div>
        </div>
        <button type="submit" class="submit">Ajouter</button>
        <div class="return-button">
            <a href="users.php">Retour</a>
        </div>
    </form>
</div>

{% endblock %}
