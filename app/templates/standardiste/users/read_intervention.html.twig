<script>
$(document).ready(function() {
    // Fonction pour mettre à jour la barre de progression
    function updateProgressBar(statusType) {
        console.log("Statut récupéré:", statusType); // Débogage

        var progress = 0;
        var statusLabel = '';

        // Retirer toutes les classes associées à la progression
        $('#progress-bar').removeClass('en-cours en-attente valide');

        switch (statusType.toLowerCase()) { // Convertir en minuscules pour gérer les cas de texte
            case 'en cours':
                progress = 20;
                statusLabel = 'En cours';
                $('#progress-bar').addClass('en-cours');
                break;
            case 'en attente':
                progress = 40;
                statusLabel = 'En attente';
                $('#progress-bar').addClass('en-attente');
                break;
            case 'validee': // Corriger la casse
                progress = 100;
                statusLabel = 'Validé';
                $('#progress-bar').addClass('valide');
                break;
            default:
                progress = 0;
                statusLabel = 'Non défini';
        }

        $('#progress').css('width', progress + '%');
        $('#status-label').text(statusLabel);
    }

    // Initialisation de la barre de progression
    updateProgressBar('{{ intervention.status_type }}');
});

</script>


